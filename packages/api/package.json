{
  "name": "scratch-srcbook",
  "version": "0.0.7",
  "type": "module",
  "bin": "./bin/start",
  "scripts": {
    "init": "vite-node ./initialization.mts",
    "predev": "pnpm run init",
    "dev": "vite-node dev-server.mts",
    "start": "NODE_ENV=production node dist/index.mjs",
    "test": "vitest",
    "build": "tsc && cp -R drizzle dist/drizzle",
    "check-types": "tsc",
    "depcheck": "depcheck",
    "generate": "drizzle-kit generate",
    "premigrate": "pnpm run init",
    "migrate": "drizzle-kit migrate",
    "prepublishOnly": "tsc && pnpm -w run vendorize-web"
  },
  "dependencies": {
    "@srcbook/shared": "workspace:^",
    "better-sqlite3": "^11.0.0",
    "cors": "^2.8.5",
    "depcheck": "^1.4.7",
    "drizzle-orm": "^0.31.2",
    "express": "^4.19.2",
    "marked": "^12.0.2",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "drizzle-kit": "^0.22.7",
    "vite": "^5.2.11",
    "vite-node": "^1.6.0",
    "vitest": "^1.6.0"
  }
}
