{
  "extends": "@srcbook/configs/ts/base.json",
  "compilerOptions": {
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "outDir": "dist",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["index.tsx", "src/**/*.{ts.tsx}"],
  "exclude": ["node_modules", "dist"]
}
