{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "nodenext",
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./index.ts", "./src/**/*.ts"],
  "exclude": ["node_modules"]
}
